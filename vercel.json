{
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.0"
        },
        "hooks": {
            "build": {
                "command": "apt-get update && apt-get install -y libpq-dev && docker-php-ext-install pdo_pgsql"
            }
        }
    },
    "routes": [        
        {
            "src": "/build/(.*)",
            "dest": "/build/$1"
        },
        {
            "src": "/swagger/(.*)",
            "dest": "/swagger/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"            
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://yourproductionurl.com",

        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",

        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    }
}
